<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_background_light</item>
        <item name="colorOnBackground">@color/color_background_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/color_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

