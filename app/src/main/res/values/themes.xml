    <style name="Theme.AppBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
