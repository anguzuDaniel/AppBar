<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expense_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/expense_card_background"
    android:elevation="0dp"
    android:orientation="horizontal"
    android:layout_marginVertical="15dp"
    android:padding="16dp"
    android:weightSum="4"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/expense_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingBottom="2dp"
            android:text="Netflix"
            android:textColor="@color/color_transaction_label"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/expense_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Subscription"
            android:textColor="@color/color_transaction_label"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,TextSizeCheck" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/expense_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="2dp"
            android:text="-$4.99/month"
            android:textColor="@color/color_primary"
            android:textStyle="normal"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/expense_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingLeft="8dp"
            android:text="5:30pm"
            android:textColor="@color/color_transaction_label"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,TextSizeCheck" />
    </LinearLayout>
</LinearLayout>